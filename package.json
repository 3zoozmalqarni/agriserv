{
  "name": "agriserv-lq-system",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "AgriServ LQ System",
  "author": "Abdulaziz Mohammed Algharni",
  "contributors": [
    "Fahad Abdullah Alghamdi (Financial Support)",
    "Shakir Safar Althubaiti (Financial Support)"
  ],
  "copyright": "هذا المشروع من افكار وتنفيذ برمجي : عبدالعزيز محمد القرني - وبدعم مادي من : فهد عبدالله الغامدي و شاكر سفر الثبيتي",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "electron:dev": "npx concurrently \"npx cross-env NODE_ENV=development npm run dev\" \"npx wait-on http://localhost:5173 && npx cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && npx electron-builder",
    "electron:build:win": "npm run build && npx electron-builder --win",
    "electron:build:mac": "npm run build && npx electron-builder --mac",
    "electron:build:linux": "npm run build && npx electron-builder --linux"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@supabase/supabase-js": "^2.39.3",
    "@types/react-router-dom": "^5.3.3",
    "better-sqlite3": "^12.4.1",
    "date-fns": "^4.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-barcode": "^1.6.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.63.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.9.3",
    "xlsx": "^0.18.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.agriserv.labsystem",
    "productName": "الشركة الوطنية للخدمات الزراعية",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*",
      "node_modules/better-sqlite3/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false,
      "extraResources": [
        {
          "from": "public",
          "to": "public",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "الشركة الوطنية للخدمات الزراعية",
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    }
  }
}
